{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "banner": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "text",
      "required": true
    },
    "readTime": {
      "type": "integer",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "views": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "tags": {
      "type": "json",
      "required": true
    }
  }
}
